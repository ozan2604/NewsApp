@model DtoLayer.Dtos.AuthDtos.RegisterDto
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <title>Kayıt Ol</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body class="bg-light d-flex justify-content-center align-items-center vh-100">

    <div class="card shadow-lg p-4" style="width: 420px;">
        <h3 class="text-center mb-4">Kayıt Ol</h3>

        @if (ViewBag.ErrorMessage != null)
        {
            <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
        }

        <form method="post" action="/User/Auth/Register">
            <div class="mb-3">
                <label class="form-label">Ad</label>
                <input name="Name" type="text" class="form-control" placeholder="Adınızı girin" />
            </div>
            <div class="mb-3">
                <label class="form-label">Soyad</label>
                <input name="Surname" type="text" class="form-control" placeholder="Soyadınızı girin" />
            </div>
            <div class="mb-3">
                <label class="form-label">Email</label>
                <input name="Email" type="email" class="form-control" placeholder="ornek@mail.com" />
            </div>
            <div class="mb-3">
                <label class="form-label">Kullanıcı Adı</label>
                <input name="Username" type="text" class="form-control" placeholder="Kullanıcı adınızı girin" />
            </div>
            <div class="mb-3">
                <label class="form-label">Şifre</label>
                <input name="Password" type="password" class="form-control" placeholder="Şifrenizi girin" />
            </div>
            <button type="submit" class="btn btn-success w-100">Kayıt Ol</button>
        </form>

        <div class="text-center mt-3">
            <small>Zaten hesabınız var mı? <a href="/User/Auth/Login" class="text-decoration-none">Giriş Yap</a></small>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
