<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AI Haberler</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
</head>
<body>
    @{
        var username = User.Claims.FirstOrDefault(c => c.Type == "Username")?.Value;
    }

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-sm py-3">
        <div class="container-fluid px-4 d-flex justify-content-between align-items-center">

            <!-- Sol Logo -->
            <a class="navbar-brand fw-bold" asp-area="User" asp-controller="Home" asp-action="Index">
                🧠 AI Haberler
            </a>

            <!-- Orta Arama Alanı -->
            <div class="mx-auto" style="max-width: 450px; width: 100%;">
                <form class="input-group" asp-area="User" asp-controller="Home" asp-action="Index" method="get">
                    <input type="text"
                           name="tag"
                           class="form-control"
                           placeholder="Etikete göre ara..."
                           aria-label="Etikete göre ara" />
                    <button class="btn btn-primary" type="submit">
                        Ara
                    </button>
                </form>
            </div>

            <!-- Sağ Kullanıcı Alanı -->
            <!-- Sağ Kullanıcı Alanı -->
            <div class="d-flex align-items-center ms-3">
                <span class="text-light me-3 fw-semibold">
                    Hoşgeldin, @username
                </span>
                <a href="/User/Account/Index" class="btn btn-warning btn-sm" title="Hesap Bilgileri">
                    <i class="bi bi-gear-fill"></i>
                </a>
                
            </div>

        </div>
    </nav>


    <!-- İçerik Alanı -->
    <div class="container mt-4">
        @RenderBody()
    </div>

    <!-- Footer -->
    <footer class="bg-light text-center p-3 mt-5 border-top">
        <span class="text-muted">© @DateTime.Now.Year AI Haberler</span>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
