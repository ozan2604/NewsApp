@model DtoLayer.Dtos.AiLogDtos.CreateAiLogDto

@{
    ViewData["Title"] = "Yeni AI Haberi Oluştur";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content container-fluid mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <h3 class="mb-4">Yeni Haber Üret</h3>

            <form asp-area="Admin" asp-controller="AiLogs" asp-action="Create" method="post">
                <div class="form-group mb-3">
                    <label for="Prompt">Prompt</label>
                    <input type="text" class="form-control" id="Prompt" name="Prompt" placeholder="Örn: Bugün Türkiyede Hava Durumu Nasıl?" required />
                </div>
                <div class="form-group mb-3">
                    <label for="SourceModel">Prompt</label>
                    <input type="text" class="form-control" id="SourceModel" name="SourceModel" placeholder="Örn: mistralai/mistral-7b-instruct" required />
                </div>

                <button type="submit" class="btn btn-success">
                    <i class="bi bi-check-circle"></i> Haberi Üret
                </button>
                <a href="/Admin/AiLogs/Index" class="btn btn-secondary">Geri Dön</a>
            </form>
        </div>
    </div>
</section>