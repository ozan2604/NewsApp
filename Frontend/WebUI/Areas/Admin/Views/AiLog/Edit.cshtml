@model DtoLayer.Dtos.AiLogDtos.UpdateAiLogDto
@{
    ViewData["Title"] = "AI Log Güncelle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>AI Log Güncelle</h2>

<form asp-area="Admin" asp-controller="Ailog" asp-action="Edit" method="post">
    <input type="hidden" name="Id" value="@Model.Id" />

    <div class="form-group">
        <label>Prompt</label>
        <input type="text" name="Prompt" value="@Model.Prompt" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Response</label>
        <input type="text" name="Response" value="@Model.Response" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Model</label>
        <input type="text" name="SourceModel" value="@Model.SourceModel" class="form-control" />
    </div>
    <div class="form-group">
        <label>Başarılı mı?</label>
        <input type="checkbox" name="IsSuccessful" @(Model.IsSuccessful ? "checked" : "") />
    </div>
    <div class="form-group">
        <label>Hata Mesajı</label>
        <input type="text" name="ErrorMessage" value="@Model.ErrorMessage" class="form-control" />
    </div>
    <div class="form-group">
        <label>Haber ID</label>
        <input type="text" name="NewsId" value="@Model.NewsId" class="form-control" />
    </div>
    <button type="submit" class="btn btn-success">Güncelle</button>
</form>
