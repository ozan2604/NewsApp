@model DtoLayer.Dtos.AiLogDtos.CreateAiLogDto

@{
    ViewData["Title"] = "Yeni AI Log";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Yeni AI Log</h2>

<form asp-area="Admin" asp-controller="AiLog" asp-action="Create" method="post">
    <div class="form-group">
        <label>Prompt</label>
        <input asp-for="Prompt" class="form-control" placeholder="AI'a sorulacak metin" required />
    </div>

    <div class="form-group">
        <label>Model</label>
        <input asp-for="SourceModel" class="form-control" placeholder="gpt-4, gemini, mistralai..." required />
    </div>

    <div class="form-group">
        <label>Haber ID</label>
        <input asp-for="NewsId" class="form-control" placeholder="İlgili haberin ID'si" required />
    </div>

    <button type="submit" class="btn btn-success">Kaydet</button>
    <a asp-area="Admin" asp-controller="AiLog" asp-action="Index" class="btn btn-secondary">Geri Dön</a>
</form>