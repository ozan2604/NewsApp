@model DtoLayer.Dtos.TagDtos.CreateTagDto

@{
    ViewData["Title"] = "Yeni Etiket Ekle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content container-fluid mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <h3 class="mb-4">Yeni Etiket Ekle</h3>

            <form asp-area="Admin" asp-controller="Tag" asp-action="Create" method="post">
                <div class="form-group mb-3">
                    <label for="Name">Etiket Adı</label>
                    <input type="text" class="form-control" id="Name" name="Name" placeholder="Örn: Teknoloji" required />
                </div>

                <button type="submit" class="btn btn-success">
                    <i class="bi bi-check-circle"></i> Etiketi Kaydet
                </button>
                <a href="/Admin/Tag/Index" class="btn btn-secondary">Geri Dön</a>
            </form>
        </div>
    </div>
</section>
